/* miniprogram/pages/publish/publish.wxss */

.container{
  width: 100%;
  height: 100%;
}


.select-type{
  width: 100%;
  height: 70rpx;
  display: flex;
  flex-direction: row;
  justify-content: flex-start;
  align-items: center;
}

.select-type-title{
  width: 20%;
  height: 70rpx;
  line-height: 70rpx;
  text-align: left;
  font-size: 30rpx;
}

.select-view{
  width: auto;
  height: 70rpx;
  display: flex;
  flex-direction: row;
  justify-content: flex-start;
  align-items: center;
}

.select-icon{
  width: 50rpx;
  height: 50rpx;
}

.select-value{
  width: 50rpx;
  height: 100%;
  line-height: 70rpx;
  text-align: center;
  font-size: 25rpx;
}

.publish-title-view{
  width: 100%;
  height: 80rpx;
  display: flex;
  flex-direction: row;
  justify-content: flex-start;
  border-top: 1rpx solid #f1efef;
}

.publish-title-text{
  width: 20%;
  height: 80rpx;
  line-height: 80rpx;
  text-align: left;
  font-size: 30rpx;
}

.publish-title-input{
  width: 70%;
  height: 100%;
  line-height: 80rpx;
  text-align: left;
  font-size: 30rpx;
}

.publish-input{
  width: 100%;
  height: 400rpx;
  text-align:start;
  line-height: 30rpx;
  font-size: 30rpx;
  border-left: 1rpx solid #f1efef;
  border-right: 1rpx solid #f1efef;
  border-bottom:1rpx solid #f1efef;
  border-top:1rpx solid #f1efef;
}

.publish-image{
  width: 100%;
  height: 180rpx;

  white-space: nowrap;

}

.publish-image-load{
  position: relative;
  display: inline-block;
  vertical-align: top;
  margin-right: 10rpx;
  width: 180rpx;
  height: 180rpx;
  background: #eef7fa;
}

.publish-image-load-src{
  position: absolute;
  left: 0rpx;
  top: 0rpx;
  width: 180rpx;
  height: 180rpx;
}

.publish-image-load-delete{
  position: absolute;
 
  left: 140rpx;
  top: 0rpx;
  
  width: 40rpx;
  height: 40rpx;
}

.publish-image-put{
  width: 180rpx;
  height: 180rpx;
 
    display: inline-block;
  vertical-align: top;
  margin-right: 10rpx;
  background: #eef7fa;
}

.publish-image-put-tmp{
  width: 100%;
  height: 100%;
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
  align-items: center;
}

.publish-image-icon{
  width: 50rpx;
  height: 50rpx;
  margin-top: 50rpx;
}

.publish-image-title{
  width: 100rpx;
  height: 50rpx;
  line-height: 50rpx;
  text-align: center;
  font-size: 25rpx;
}

.publish-address{
  width: 100%;
  height: 80rpx;
  display: flex;
  flex-direction: row;
  justify-content: flex-start;
  align-items: center;
}

.publish-address-icon{
  width: 60rpx;
  height: 60rpx;
}

.publish-address-title{
  width: auto;
  height: 60rpx;
  line-height: 60rpx;
  text-align: center;
  font-size: 25rpx;
}

.publish-photo-type{
  width: 100%;
  height: 60rpx;
  border-top: 1rpx solid #f1efef;
  border-bottom: 1rpx solid #f1efef;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
}

.publish-photo-type-title{
  width: 25%;
  height: 60rpx;
  line-height: 60rpx;
  text-align: center;
  font-size: 30rpx;
}

.publish-photo-type-switch{
  width: 140rpx;
  height: 60rpx;
}

.publish-end{
  width: 100%;
  height: 60rpx;
  border-top: 1rpx solid #f1efef;
  border-bottom: 1rpx solid #f1efef;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
}

.publish-end-cancle{
  width: 25%;
  height: 60rpx;
  line-height: 60rpx;
  text-align: center;
  font-size: 30rpx;
}

.publish-end-confirm{
  width: 25%;
  height: 60rpx;
  line-height: 60rpx;
  text-align: center;
  font-size: 30rpx;
}