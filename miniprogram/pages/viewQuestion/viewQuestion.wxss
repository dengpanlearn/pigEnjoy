.question-Symptoms{
  width: 95%;
  height: auto;
  border: 1rpx solid #dcdcdcdc;
  line-height: 70rpx;
  text-align: left;
  font-size: 30rpx;
  margin-left: 20rpx;
  margin-right: 20rpx;
}


.question-photo-big{
  width: 100%;
  height: 300;
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
  justify-content: flex-start;
  align-items: center;
}


.question-photo-small{
  width: 95%;
  height: auto;
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
  justify-content: flex-start;
  align-items: center;
 margin-left: 20rpx;
}

.question-photo-item-big{
  width: 38%;
  height: 300rpx;
  margin-left: 20rpx;
   margin-top: 10rpx;
}

