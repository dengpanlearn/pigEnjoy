/* miniprogram/pages/center/center.wxss */

.container{
  width: 100%;
  height: auto;
  background: #fcfcfc;
  overflow: hidden;
}

.profile-info{
  width: 100%;
  height: 280rpx;
  display: flex;
  flex-wrap: wrap;
  align-items: center;
  justify-content: flex-start;

  background: #3333;
  border-radius: 20rpx;
}

.profile-info .avatar{
  width: 148rpx;
  height: 148rpx;
  border-radius: 50%;
}

.profile-info .info{
  width: 150rpx;
  height: 85rpx;
  padding-left: 32.5rpx;
}

.profile-info .name{
  display: block;
  height: 45rpx;
  line-height: 45rpx;
  color: #fff;
  font-size: 37.5rpx;
  margin-bottom: 10rpx;
}

.get-info{
  width: 100%;
  height: 45rpx;
  border-radius: 10rpx;
  line-height: 45rpx;
  text-align: center;
}

.blog-collect{
  width: 100%;
  height:110rpx;
  display: flex;
  flex-direction: row;
 justify-content: space-between;
 align-items: center;
}

.blog-collect-item{
  width: 20%;
  height: 100%;
  display: flex;
  flex-direction: column;
  justify-content: space-around;
  align-items: center;
}

.collect-value{
  width: 100%;
  height: 50rpx;
  line-height: 50rpx;
  text-align: center;
  font-size: 25rpx;
}

.collect-name{
  width: 100%;
  height: 50rpx;
  line-height: 50rpx;
  text-align: center;
  font-size: 35rpx;
}