/* miniprogram/pages/feedBack/feedBack.wxss */

.container{
  width: 100%;
  height: 100%;
}

.feed-back-type{
  width: 100%;
  height: auto;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
  border-bottom: 10rpx solid #8f8b8bde;
  border-top: 10rpx solid #8f8b8bde;
}

.feed-back-type-title{
  width: auto;
  height: 50rpx;
  line-height: 50rpx;
  margin-left: 20rpx;
  font-size: 31rpx;
  text-align: left;
  margin-top: 10rpx;
  margin-bottom: 10rpx;
}

.feed-back-type-picker-view{
    width: auto;
  height: 50rpx;
  display: flex;
  flex-direction: row;
  justify-content: flex-end;
  align-items: center;
    margin-top: 10rpx;
  margin-bottom: 10rpx;
}

.feed-back-type-picker{
  width: auto;
  height: 40rpx;
    margin-right: 20rpx;
}

.picker-view{
  width: auto;
  height: 40rpx;
  line-height: 40rpx;

  font-size: 25rpx;
  text-align: right;
}

.picker-icon{
  width: 26rpx;
  height: 26rpx;
  margin-right: 20rpx;
}

.add-feed-back-view{
  width: 100%;
  height: auto;
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
  align-items: flex-start;
   border-bottom: 10rpx solid #8f8b8bde;
}

.add-feed-back-title{
  width: auto;
  height: 50rpx;
  line-height: 50rpx;
  margin-left: 20rpx;
  font-size: 31rpx;
  text-align: left;
  margin-top: 20rpx;
  margin-bottom: 20rpx;
}

.add-feed-back-input{
  width: 95%;
  height: 400rpx;
  border: 2rpx solid #8f8b8bde;
   line-height: 40rpx;
  margin-left: 20rpx;
  font-size: 28rpx;
  text-align: left;

  margin-bottom: 20rpx;
}

.add-feed-back-placeholder{
  width: auto;
  height: auto;
  line-height: 40rpx;
  margin-left: 20rpx;
  font-size: 28rpx;
  text-align: left;
}


.publish-image{
  width: 100%;
  height: auto;

  white-space: nowrap;

}

.publish-image-load{
  position: relative;
  display: inline-block;
  vertical-align: top;
  margin-right: 10rpx;
  width: 180rpx;
  height: 180rpx;
  background: #eef7fa;
  margin-top: 10rpx;
  margin-bottom: 10rpx;
}

.publish-image-load-src{
  position: absolute;
  left: 0rpx;
  top: 0rpx;
  width: 180rpx;
  height: 180rpx;
}

.publish-image-load-delete{
  position: absolute;
 
  left: 140rpx;
  top: 0rpx;
  
  width: 40rpx;
  height: 40rpx;
}

.publish-image-put{
  width: 180rpx;
  height: 180rpx;
 
    display: inline-block;
  vertical-align: top;
  margin-right: 10rpx;
  background: #eef7fa;
    margin-top: 10rpx;
  margin-bottom: 10rpx;
}

.publish-image-put-tmp{
  width: 100%;
  height: 100%;
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
  align-items: center;
}

.publish-image-icon{
  width: 50rpx;
  height: 50rpx;
  margin-top: 50rpx;
}

.publish-image-title{
  width: 100rpx;
  height: 50rpx;
  line-height: 50rpx;
  text-align: center;
  font-size: 25rpx;
}


.publish-end{
  width: 100%;
  height: 60rpx;
  border-top: 1rpx solid #f1efef;
  border-bottom: 1rpx solid #f1efef;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
}

.publish-end-cancle{
  width: 25%;
  height: 60rpx;
  line-height: 60rpx;
  text-align: center;
  font-size: 30rpx;
}

.publish-end-confirm{
  width: 25%;
  height: 60rpx;
  line-height: 60rpx;
  text-align: center;
  font-size: 30rpx;
}