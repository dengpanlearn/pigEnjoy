/* miniprogram/pages/technology/technology.wxss */

.container{
  width: 100%;
  height: 100%;
}

.technology-type{
  width: 100%;
  height: 100rpx;
  display: flex;
  flex-direction: row;
  justify-content: space-around;
  align-items: center;
  border-top: 1rpx solid #f7f7f7fc;
  border-bottom: 1rpx solid #f7f7f7fc;
}

.technology-type-item-selected{
  width: 30%;
  height: 95rpx;
  line-height: 95rpx;
  text-align: center;
  font-size: 40rpx;
  border-bottom: 1rpx solid #eb1616fc;
}

.technology-type-item{
  width: 30%;
  height: 95rpx;
  line-height: 95rpx;
  text-align: center;
  font-size: 40rpx;
}

.publish-btn{
  position: fixed;
  top: 70%;
  left: 83%;
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
  background: #d81e06;
  display: flex;
  flex-direction: column;
  justify-content: flex-end;
  align-items: center;
}

.publish-icon{
  width: 60rpx;
  height: 60rpx;
  background: #d81e06;
  margin-bottom: 10rpx;
}

.publish-text{
  width: auto;
  height: 40rpx;
  text-align: center;
  line-height: 40rpx;
  font-size: 25rpx;
  color: #fffffffc;
}

.technology-item{
  width: 100%;
  height: auto;
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
  align-items: flex-start;
  margin-left: 20rpx;
  border-bottom: 1rpx solid #f7f7f7fc;
}

.technology-item-title{
  width: 100%;
  height: auto;
  line-height: 50rpx;
  text-align: left;
  font-size: 30rpx;
  margin-top: 20rpx;
  margin-bottom: 20rpx;
}

.technology-item-brief{
  width: 100%;
  height: 45rpx;
  display: flex;
  flex-direction: row;
  justify-content: flex-start;
  align-items: center;
  margin-bottom: 10rpx;
}

.technology-item-user{
  width: auto;
  height: 45rpx;
  display: flex;
  flex-direction: row;
  justify-content: flex-start;
  align-items: center;
  margin-right: 30rpx;
}

.technology-item-avatar{
  width: 35rpx;
  height: 35rpx;
  border-radius: 50%;
   margin-right: 20rpx;
}

.technology-item-username{
  width: auto;
  height: 45rpx;
  line-height: 45rpx;
  text-align: center;
  font-size: 20rpx;
}

.technology-item-comment{
  width: auto;
  height: 100%;
  display: flex;
  flex-direction: row;
  justify-content: space-around;
  align-items: center;
}

.technology-item-comments-count{
  width: auto;
  height: 45rpx;
  line-height: 45rpx;
  text-align: center;
  font-size: 20rpx;
  margin-right: 30rpx;
}

.technology-item-comments-time{
  width: auto;
  height: 45rpx;
  line-height: 45rpx;
  text-align: center;
  font-size: 20rpx;
}