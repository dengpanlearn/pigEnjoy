/* miniprogram/pages/viewTechnology/viewTechnology.wxss */

.container{
  width:100%;
  height: 100%;
}

.technology-header{
  width: 100%;
  height: auto;
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
  align-items:  flex-start;
  margin-left: 20rpx;
  margin-right: 10rpx;
  border-bottom: 1rpx solid #ebe8e8fc;
}

.technology-title{
  width: 100%;
  height: auto;
  line-height: 60rpx;
  text-align: left;
  font-size: 37rpx;
  margin-top: 20rpx;
  margin-bottom: 20rpx;
}

.technology-user{
  width: 100%;
  height: 55rpx;
  display: flex;
  flex-direction: row;
  justify-content: flex-start;
  align-items: center;
  margin-bottom: 10rpx;
}

.technology-user-info{
  width: auto;
  height: 55rpx;
  display: flex;
  flex-direction: row;
  justify-content: flex-start;
  align-items: center;
   margin-right: 20rpx;
}

.technology-avatar{
  width: 55rpx;
  height: 55rpx;
  border-radius: 50%;
  margin-left: 30rpx;
  margin-right: 20rpx;
}

.technology-username{
  width: auto;
  height: 55rpx;
  line-height: 55rpx;
  text-align: left;
  font-size: 25rpx;
}

.technology-createtime{
  width: auto;
  height: 55rpx;
  line-height: 55rpx;
  text-align: left;
  font-size: 25rpx;
}

.technology-content-view{
  width: 100%;
  height: auto;
  display: flex;
  flex-direction: row;
  justify-content: flex-start;
  align-items: center;


  margin-top: 20rpx;
}
.technology-content{
  width: 100%;
  height: auto;
  line-height: 40rpx;
  text-align: left;
  font-size: 28rpx;
  margin-left: 20rpx;
  margin-right: 10rpx;
}