/* miniprogram/pages/question/question.wxss */

.container{
  width: 100%;
  height: 100%;
}

.search-view{
  width: 100%;
  height: 300rpx;
  display: flex;
  flex-direction: column;
  justify-content: space-around;
  align-items: center;
  background: #f35858fc;
}

.search-title{
  width: auto;
  height: 50rpx;
  line-height: 50rpx;
  text-align: center;
  font-size: 45rpx;
  color: #dddcdcfc;
}

.search-menu{
  width: 90%;
  height: 50rpx;
  display: flex;
  flex-direction: row;
  justify-content: flex-start;
  align-items: center;
}

.search-menu-input{
  width: 87%;
  height: 50rpx;
  line-height:50rpx;
  text-align: left;
  font-size: 25rpx;
  background: #fefefefe;
}

.placeholder-class{
  width: auto;
  height: 100%;
  line-height: 50rpx;
  text-align: left;
  font-size: 25rpx;
  background: #fefefefe;
}

.search-btn{
  width: 13%;
  height: 100%;
  line-height: 50rpx;
  text-align: center;
  font-size: 25rpx;
  background: #f0a911fe;
  color: #dddcdcfc;
}

.question-menu-view{
  width: 100%;
  height: 200rpx;
  display: flex;
  flex-direction: column;
  justify-content: space-around;
  align-items: center;
  border-bottom: 5rpx solid #dddcdcfc;
}

.question-menu-title{
  width: auto;
  height: 50rpx;
  line-height: 50rpx;
  text-align: center;
  font-size: 45rpx;
}

.question-menu-btn{
  width: 150rpx;
  height: 50rpx;
  line-height: 50rpx;
   text-align: center;
  font-size: 25rpx;
  background: #f35858fc;
  border-radius: 20rpx;
  margin-bottom: 20rpx;
}